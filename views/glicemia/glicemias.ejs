<!DOCTYPE html>
<html lang="pt-br">

<%- include("../partials/header") %>

<body>
    
    <%- include("../partials/nav") %>
    
    <div class="container justiy-content-center">
       
        <form action="/glicemia" method="post">

            <div class="row g-3">
                <div class="col">
                    <label for="value" class="form-label">Valor</label>
                    <input type="text" class="form-control" name="value" id="value" required placeholder="ex: 123">
                </div>
                <div class="col">
                    <label for="data" class="form-label">Data</label>
                    <input type="text" class="form-control" name="data" id="data" required placeholder="ex: 12/03" >
                </div>
        
                <button class="btn btn-dark">Salvar</button>
        
            </div>
        </form>

        <hr>

        <div class="d-flex align-items-center">

            <% if(glicemias.length > 0) { %>
                
                <% glicemias.forEach(glicemia => { %>
                    <div class="d-inline-flex m-2 bg-danger">
                        <p class="m-2">Data: <%= glicemia.data %></p>
                        <p class="m-2">Valor: <%= glicemia.value %></p>
                        <p class="m-2"> del</p>
                    </div>
                <% }) %>

            <% } %>
        </div>
        

    </div>

    <%- include("../partials/footer") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>